{
  "name": "graphqlint",
  "version": "1.0.0",
  "description": "GraphQLint is for linting schema files against certain rules and conventions - aim to integrate with ESLint and VSCode",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "graphqlint": "./bin/index.js"
  },
  "files": [
    "LICENSE",
    "README.md",
    "bin",
    "dist"
  ],
  "scripts": {
    "build": "npm run clean && npm run build:ts",
    "build:ts": "tsc -b ./tsconfig.build.json",
    "clean": "rm -rf dist .nyc_output",
    "lint": "eslint ./src",
    "test": "mocha",
    "test:coverage": "nyc npm run test",
    "sample01a": "node ./bin/index.js ./tests/inputs/01a-query-mutation.gql",
    "sample01b": "node ./bin/index.js ./tests/inputs/01b-query-mutation-invalid.gql"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/muratyaman/graphqlint.git"
  },
  "keywords": [
    "graphql",
    "lint",
    "schema",
    "validate",
    "check",
    "eslint",
    "vscode",
    "convention",
    "rule"
  ],
  "author": "Haci Murat Yaman",
  "license": "LICENSE",
  "bugs": {
    "url": "https://github.com/muratyaman/graphqlint/issues"
  },
  "homepage": "https://github.com/muratyaman/graphqlint#readme",
  "devDependencies": {
    "@types/chai": "^4.2.18",
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.2.2",
    "@types/node": "^15.12.2",
    "@typescript-eslint/eslint-plugin": "^4.26.1",
    "@typescript-eslint/parser": "^4.26.1",
    "chai": "^4.3.4",
    "eslint": "^7.28.0",
    "glob": "^7.1.7",
    "graphql": "^15.5.0",
    "mocha": "^9.0.0",
    "nyc": "^15.1.0",
    "ts-node": "^10.0.0",
    "typescript": "^4.3.2"
  },
  "peerDependencies": {
    "graphql": "^15.5.0"
  },
  "dependencies": {
    "chalk": "^4.1.1",
    "log-symbols": "^4.1.0"
  }
}
